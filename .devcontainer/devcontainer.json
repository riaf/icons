{
	"name": "icons.riaf.dev",
	"image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:22",
	"postCreateCommand": "npm ci",
	"remoteUser": "node",
	"customizations": {
		"vscode": {
			"extensions": [
				"astro-build.astro-vscode",
				"biomejs.biome"
			],
			"settings": {
				"[astro]": {
					"editor.defaultFormatter": "biomejs.biome"
				},
				"[javascript]": {
					"editor.defaultFormatter": "biomejs.biome"
				},
				"[typescript]": {
					"editor.defaultFormatter": "biomejs.biome"
				},
				"[typescriptreact]": {
					"editor.defaultFormatter": "biomejs.biome"
				}
			}
		}
	}
}
